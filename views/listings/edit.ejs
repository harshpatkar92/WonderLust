
<% layout('layouts/boilerplate') %>

<div class="row">
  <div class="col-md-12">
    <h3 class="text-center my-4">Edit Your Listing</h3>

    <form
      method="POST"
      action="/listings/<%= listing._id %>?_method=PUT"
      class="container"
      style="max-width: 600px;"
      enctype="multipart/form-data"
    >
      <!-- Title -->
      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input
          id="title"
          name="listing[title]"
          value="<%= listing.title %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Description -->
      <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea
          id="description"
          name="listing[description]"
          class="form-control"
          rows="4"
          required
        ><%= listing.description %></textarea>
      </div>

      <!-- Image -->
      <div class="mb-3">
        <label for="image" class="form-label">Upload New Image</label>
        <input
          id="image"
          name="listing[image]"
          type="file"
          class="form-control"
          accept="image/*"
        />

        <!-- Preview Current Image -->
        <div class="mt-3">
          <p class="text-muted mb-1">Current Image:</p>
          <img
            id="preview"
            src="<%= listing.image.url %>"
            class="img-fluid rounded border"
            alt="Current image"
            style="max-height: 200px;"
          />
        </div>
      </div>

      <!-- Price -->
      <div class="mb-3">
        <label for="price" class="form-label">Price</label>
        <input
          id="price"
          name="listing[price]"
          value="<%= listing.price %>"
          type="number"
          class="form-control"
          required
        />
      </div>

      <!-- Country -->
      <div class="mb-3">
        <label for="country" class="form-label">Country</label>
        <input
          id="country"
          name="listing[country]"
          value="<%= listing.country %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <!-- Location -->
      <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input
          id="location"
          name="listing[location]"
          value="<%= listing.location %>"
          type="text"
          class="form-control"
          required
        />
      </div>

      <button type="submit" class="btn btn-danger w-100">Update</button>
    </form>
  </div>
</div>

<!-- âœ… Image Preview Script -->
<script>
  const imageInput = document.getElementById("image");
  const preview = document.getElementById("preview");

  imageInput.addEventListener("change", () => {
    const file = imageInput.files[0];
    if (file) {
      preview.src = URL.createObjectURL(file);
    } else {
      preview.src = "<%= listing.image.url %>"; // fallback to existing
    }
  });
</script>
